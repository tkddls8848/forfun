##
# versions = ["", ""]
#  docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin
#  kubeadm  kubectl  kubelet
#  calico
#  metallb
#  helm
#  grafana
#  prometheus
#  network = ["", ""]
# --apiserver-advertise-address=192.168.1.10 \
# --pod-network-cidr=10.244.0.0/16
# masterhost 192.168.1.10


Vagrant.configure("2") do |config|

  #config.ssh.insert_key = false #disable ssh key for vagrant
  Node_Number = 1
  ### NFS Server ###
  
  config.vm.define "k8s-NFS" do |nfs|
    nfs.vm.box = "centos/7"
    nfs.vm.provider "virtualbox" do |vb|
      vb.name = "k8s-nfs"
      vb.cpus = 1
      vb.memory = 1024
      vb.customize ["modifyvm", :id, "--groups", "/k8s-cluster"]
    end
    nfs.vm.host_name = "k8s-nfs"
    nfs.vm.network "private_network", ip: "192.168.1.100"
    nfs.vm.network "forwarded_port", guest: 22, host: 10040, auto_correct: true, id: "ssh"
    nfs.vm.provision "shell", path: "./common/config.sh"
    nfs.vm.provision "shell", path: "./nfs/nfs_node.sh"
  end

  ### Master Node ####

  config.vm.define "k8s-master" do |master|
    master.vm.box = "centos/7"
    master.vm.provider "virtualbox" do |vb|
      vb.name = "k8s-master"
      vb.cpus = 3
      vb.memory = 2048
      vb.customize ["modifyvm", :id, "--groups", "/k8s-cluster"]
    end
    master.vm.host_name = "k8s-master"
    master.vm.network "private_network", ip: "192.168.1.10"
    master.vm.network "forwarded_port", guest: 22, host: 10030, auto_correct: true, id: "ssh"
    master.vm.provision "shell", path: "./common/config.sh"
    master.vm.provision "shell", path: "./common/install.sh"
    master.vm.provision "shell", path: "./master_node/master_node.sh"
    master.vm.provision "shell", path: "./master_node/loadbalancer.sh"
    master.vm.provision "shell", path: "./master_node/monitoring.sh"
    master.vm.provision "shell", path: "./master_node/jenkins.sh", privileged: false ## installing jenkins with normal user
    #master.vm.provision "shell", path: "./master_node/kubeflow.sh"
  end

  ### Worker node ###

  config.vm.define "k8s-worker1" do |worker|
    worker.vm.box = "centos/7"
    worker.vm.provider "virtualbox" do |vb|
      vb.name = "k8s-worker1"
      vb.cpus = 2
      vb.memory = 1900
      vb.customize ["modifyvm", :id, "--groups", "/k8s-cluster"]
    end
    worker.vm.host_name = "k8s-worker1"
    worker.vm.network "private_network", ip: "192.168.1.11"
    worker.vm.network "forwarded_port", guest: 22, host: "10031", auto_correct: true, id: "ssh"
    worker.vm.provision "shell", path: "./common/config.sh"
    worker.vm.provision "shell", path: "./common/install.sh"
    worker.vm.provision "shell", path: "./worker_node/worker_node.sh"
  end
  
end