Vagrant.configure("2") do |config|
    config.vm.define "docker" do |cfg|
        cfg.vm.box = "centos/7"
        cfg.vm.provider "virtualbox" do |vb|
            vb.name = "docker"
            vb.cpus = 2
            vb.memory = 2048
            vb.gui = false
        end
        cfg.vm.host_name = "docker-server"
        cfg.vm.network "private_network", ip: "192.168.55.7"
        cfg.vm.provision "shell", path: "docker_install.sh"
    end
end