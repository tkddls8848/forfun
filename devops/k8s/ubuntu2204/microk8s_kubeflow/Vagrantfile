# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.define "microk8s-master" do |master|
    master.vm.box = "bento/ubuntu-22.04"
    master.vm.provider "virtualbox" do |vb|
      vb.name = "microk8s-master"
      vb.cpus = 8
      vb.memory = 14000
    end
    master.vm.hostname = "microk8s-master"
    master.vm.network "private_network", ip: "192.168.10.10"
    master.vm.network "forwarded_port", guest: 22, host: "10030", auto_correct: true, id: "ssh"
    master.vm.provision "shell", inline: "sudo apt-get update -y"
    master.vm.provision "shell", path: "./microk8s.sh", privileged: false
  end
end
